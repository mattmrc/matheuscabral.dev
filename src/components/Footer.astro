---
import { navLinks, site, socials } from '../data/site';
import Icon from './Icon.astro';
---

<footer class="footer">
  <div class="container footer__grid">
    <div>
      <p class="eyebrow">Data engineering practice</p>
      <h2 class="headline" style="font-size: var(--step-3);">{site.name}</h2>
      <p class="subhead">{site.availability}</p>
    </div>
    <div>
      <p class="kicker">Quick links</p>
      <div class="footer__links">
        {
          navLinks.map((link) => (
            <a class="nav__link" href={link.href}>
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
    <div>
      <p class="kicker">Connect</p>
      <div class="socials">
        {
          socials.map((social) => (
            <a href={social.href} aria-label={social.label} target="_blank" rel="noreferrer">
              <Icon name={social.icon} size={18} />
              {social.label}
            </a>
          ))
        }
      </div>
      <p class="kicker" style="margin-top: var(--space-4);">
        {site.location}
      </p>
    </div>
  </div>
</footer>
