---
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import Button from '../components/Button.astro';
import { site, timeline, skills, spokenLanguages, interests } from '../data/site';
---

<BaseLayout title={`Resume - ${site.name}`}>
  <Section
    eyebrow="Resume"
    title="Data engineering and BI reporting"
    subtitle="A concise view of experience, strengths, and focus areas."
    headingLevel={1}
  >
    <div class="surface" style="display: flex; flex-wrap: wrap; gap: var(--space-4); align-items: center;">
      <div style="flex: 1 1 260px;">
        <h3 style="font-size: var(--step-2);">{site.name}</h3>
        <p>{site.location}</p>
        <p>{site.email}</p>
      </div>
      <div style="display: flex; gap: var(--space-3);">
        <Button href="/resume.pdf" variant="outline">Download PDF</Button>
        <Button href="/contact">Contact</Button>
      </div>
    </div>
  </Section>

  <Section eyebrow="Summary" title="ETL pipelines and KPI reporting">
    <div class="surface">
      <p>
        Data engineer with hands-on experience building ETL pipelines in Python, PySpark, and SQL on
        Databricks. I deliver Power BI dashboards for finance and management teams and own the flow
        from requirements to deployment and monitoring.
      </p>
    </div>
  </Section>

  <Section eyebrow="Experience" title="Roles">
    <div class="timeline">
      {timeline.map((item) => (
        <div class="timeline-item">
          <p class="kicker">{item.period}</p>
          <h3>{item.role}</h3>
          <p class="kicker">{item.company}</p>
          <p>{item.summary}</p>
        </div>
      ))}
    </div>
  </Section>

  <Section eyebrow="Skills" title="Capabilities">
    <div class="grid grid--2">
      <div class="surface">
        <h3>Core competencies</h3>
        <ul style="margin-left: var(--space-4); color: var(--color-muted);">
          <li>End-to-end ETL pipelines in Python, PySpark, and SQL</li>
          <li>Databricks workflows, modular refactors, and reuse</li>
          <li>Power BI dashboards for financial KPIs</li>
          <li>Stakeholder requirements, metric validation, and monitoring</li>
        </ul>
      </div>
      <div class="surface">
        <h3>Technical toolkit</h3>
        <div class="tag-list">
          {[...skills.languages, ...skills.platforms, ...skills.tools].map((item) => (
            <span class="badge">{item}</span>
          ))}
        </div>
      </div>
    </div>
  </Section>

  <Section eyebrow="Education" title="Background">
    <div class="grid grid--2">
      <div class="surface">
        <h3>Data Analytics Intensive Bootcamp</h3>
        <p class="kicker">Ironhack, Lisbon Campus</p>
        <p>Focused on Python, SQL, statistics, machine learning, and BI tools like Tableau.</p>
      </div>
      <div class="surface">
        <h3>Law Degree</h3>
        <p class="kicker">NOVA School of Law</p>
        <p>Training in civil, criminal, administrative, and commercial law.</p>
      </div>
    </div>
  </Section>

  <Section eyebrow="Languages" title="Spoken languages">
    <div class="surface">
      <div class="tag-list">
        {spokenLanguages.map((item) => (
          <span class="badge">{item.language} ({item.level})</span>
        ))}
      </div>
    </div>
  </Section>

  <Section eyebrow="Interests" title="Outside of work">
    <div class="surface">
      <ul>
        {interests.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  </Section>
</BaseLayout>
